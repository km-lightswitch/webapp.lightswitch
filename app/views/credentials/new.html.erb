<h1>New credentials</h1>

<%= form_for :credential, url: credentials_path do |form| %>

    <% if @credential.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@credential.errors.count, "error") %> prevented the credential from being saved
          </h2>
          <ul>
            <% @credential.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>

    <p>
      <%= form.label :access_key_id %><br>
      <%= form.text_field :access_key_id %>
    </p>

    <p>
      <%= form.label :secret_access_key %><br>
      <%= form.text_field :secret_access_key %>
    </p>

    <p>
      <%= form.submit %>
    </p>

<% end %>